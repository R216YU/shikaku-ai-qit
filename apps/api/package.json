{
  "name": "@shikaku-ai/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "db:migrate:local": "wrangler d1 execute shikaku-ai-db --local --file=migrations/0001_initial.sql",
    "db:migrate:remote": "wrangler d1 execute shikaku-ai-db --remote --file=migrations/0001_initial.sql"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.0",
    "@shikaku-ai/config": "workspace:*",
    "@shikaku-ai/core": "workspace:*",
    "@shikaku-ai/gemini": "workspace:*",
    "@shikaku-ai/schema": "workspace:*",
    "hono": "^4.0.0",
    "stripe": "^17.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@cloudflare/workers-types": "^4.0.0",
    "typescript": "*",
    "vitest": "*",
    "wrangler": "^3.0.0"
  }
}
